<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeViewCard"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:scaleType="fitXY"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:id="@+id/card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shadow_inverse" />

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/next"
                android:scaleType="centerCrop"
                android:contentDescription="action_settings"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/background_edittext"
                android:orientation="vertical"
                android:id="@+id/relativeView"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@+id/imgHeader"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <com.example.fostersoftsol01.luvoffers.textview.TextViewLight
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text=""
                    android:fontFamily="Montserrat"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <com.example.fostersoftsol01.luvoffers.textview.TextViewMedium
                        android:id="@+id/tvHeaderSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSubText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/tvHeaderSubTitle"
                        android:layout_toRightOf="@+id/tvHeaderSubTitle"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="#989898"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>