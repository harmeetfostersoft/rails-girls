<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.fostersoftsol01.luvoffers.textview.TextViewSemiBold
        android:id="@+id/titleForget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#5E75CE"
        android:textAlignment="center"/>

    <com.example.fostersoftsol01.luvoffers.EditTextLight
        android:id="@+id/edtNewPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:maxLength="8"
        android:textSize="18sp"
        android:typeface="sans"
        android:hint="New Password"
        android:background="@drawable/edt_text_bg"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_below="@+id/titleForget"
        android:layout_alignLeft="@+id/edtConfPass"
        android:layout_alignStart="@+id/edtConfPass">
        <requestFocus />
    </com.example.fostersoftsol01.luvoffers.EditTextLight>

    <com.example.fostersoftsol01.luvoffers.EditTextLight
        android:id="@+id/edtConfPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:maxLength="8"
        android:textSize="18sp"
        android:background="@drawable/edt_text_bg"
        android:hint="Confirm-Password"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_below="@+id/edtNewPass"
        android:layout_centerHorizontal="true" />

    <com.example.fostersoftsol01.luvoffers.button.ButtonSemiBold
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#43DEE4"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/edtConfPass"
        android:layout_centerHorizontal="true"
        android:text="Submit" />

</RelativeLayout>