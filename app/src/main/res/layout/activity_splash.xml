<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_image"
    tools:context="com.example.fostersoftsol01.luvoffers.Splash">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imgSplash"
            android:src="@drawable/new_logo_app"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tvLogoName"
            />
        <com.example.fostersoftsol01.luvoffers.textview.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLogoName"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:text="@string/logoText"
            android:layout_centerInParent="true"/>
</RelativeLayout>