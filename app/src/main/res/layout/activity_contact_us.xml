<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_image"
    tools:context="com.example.fostersoftsol01.luvoffers.Offers.ContactUs">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgMenu"
        android:src="@drawable/menu"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>


    <ImageView
        android:id="@+id/imgLogoTimer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/new_logo_app"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvLogoTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogoTimer"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:text="@string/logoText"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeView"
        android:layout_below="@+id/tvLogoTimer"
        android:background="#FFFFFF"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



        <com.example.fostersoftsol01.luvoffers.textview.TextViewSemiBold
            android:id="@+id/tvContactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="#2D303A"
            android:layout_marginTop="20dp"
            android:text="@string/contactUs"/>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvContactUs">

            <com.example.fostersoftsol01.luvoffers.textview.TextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edtfeedback"
                android:text="Feedback"
                android:maxLength="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:background="@drawable/edt_text_bg">
            <requestFocus></requestFocus>
            </com.example.fostersoftsol01.luvoffers.textview.TextViewSemiBold>



            <com.example.fostersoftsol01.luvoffers.textview.TextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/edtEmail"
                android:text="foster.softsolutions@gmail.com"
                android:gravity="center"
                android:maxLength="30"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColorHint="#000000"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/edtfeedback"
                android:background="@drawable/edt_text_bg"/>

            <com.example.fostersoftsol01.luvoffers.EditTextLight
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/edtMessage"
                android:hint="message"
                android:maxLength="100"
                android:gravity="top"
                android:maxLines="4"
                android:lines="4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lineSpacingExtra="2dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:layout_marginTop="19dp"
                android:inputType="textMultiLine"
                android:background="@drawable/edt_text_bg"
                android:layout_below="@+id/edtEmail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <com.example.fostersoftsol01.luvoffers.button.ButtonSemiBold
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edtMessage"
                android:text="@string/btnSubmit"
                android:background="@color/btn_accept"
                android:textColor="#FFFFFF"
               />
        </RelativeLayout>

</RelativeLayout>
        </ScrollView>
        </RelativeLayout>
</RelativeLayout>
